@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(NoLayout)">
                <MudPaper Class="pa-6 mt-6 text-center" Elevation="3" Style="max-width: 500px; margin: auto;">
                    <MudText Typo="Typo.h4" Color="Color.Error">404 – Seite nicht gefunden</MudText>
                    <MudText Typo="Typo.body1" Class="mt-2">
                        Die angeforderte Seite konnte nicht gefunden werden. Bitte überprüfe die URL oder gehe zurück zur Startseite.
                    </MudText>
                    <MudButton Class="mt-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Nav.NavigateTo("/home"))">
                        Zur Startseite
                    </MudButton>
                </MudPaper>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
